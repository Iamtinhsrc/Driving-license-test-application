<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/padding_xlarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header: số câu -->
        <TextView
            android:id="@+id/tv_question_index"
            android:text="@string/label_question_all"
            android:textStyle="bold"
            android:textSize="@dimen/text_medium"
            android:background="@drawable/bg_chip_gray"
            android:padding="@dimen/padding_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Nội dung câu hỏi -->
        <TextView
            android:id="@+id/tv_question_detail"
            android:textStyle="bold"
            android:textSize="@dimen/text_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/default_text_question_detail"/>

        <!-- Ảnh minh họa (GONE nếu không có) -->
        <ImageView
            android:id="@+id/img_question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_height"
            android:layout_marginTop="@dimen/margin_medium"
            android:contentDescription="@string/img_description"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:ignore="ImageContrastCheck"
            tools:src="@drawable/ic_launcher_foreground"
            tools:visibility="visible" />

        <!-- Danh sách đáp án -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:clipToPadding="false"
            tools:listitem="@layout/item_answer_option"/>

        <!-- Nút kiểm tra -->
        <Button
            android:id="@+id/btn_check_answer"
            android:text="@string/tv_check_answer"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_primary"
            android:textColor="@android:color/white"
            tools:ignore="VisualLintButtonSize" />

        <!-- Kết quả câu trả lời + giải thích -->
        <LinearLayout
            android:id="@+id/ll_result"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="@dimen/padding_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_answer_result"
                android:text="@string/tv_answer_result"
                android:textStyle="bold"
                android:textSize="@dimen/text_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/default_question_suggest_2"/>

            <TextView
                android:id="@+id/tv_explanation"
                android:layout_marginTop="@dimen/margin_medium"
                android:textSize="@dimen/text_medium"
                android:lineSpacingExtra="@dimen/line_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/default_explanation_question_detail"/>
        </LinearLayout>

        <!-- Điều hướng nhanh -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_prev_question"
                android:text="@string/btn_prev"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:ignore="VisualLintButtonSize" />

            <Space android:layout_width="@dimen/layout_width" android:layout_height="@dimen/layout_height"/>

            <Button
                android:id="@+id/btn_next_question"
                android:text="@string/btn_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:ignore="VisualLintButtonSize" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
