<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <!-- Buttons in vertical chain -->
    <Button
        android:id="@+id/btn_questions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_all_questions"
        android:background="@drawable/bg_button_primary"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintBottom_toTopOf="@id/btn_category"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_category"
        android:background="@drawable/bg_button_primary"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/btn_questions"
        app:layout_constraintBottom_toTopOf="@id/btn_exam"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <Button
        android:id="@+id/btn_exam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_exam"
        android:background="@drawable/bg_button_primary"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/btn_category"
        app:layout_constraintBottom_toTopOf="@id/btn_history"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_history"
        android:background="@drawable/bg_button_primary"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/btn_exam"
        app:layout_constraintBottom_toTopOf="@id/btn_guide"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <Button
        android:id="@+id/btn_guide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_guide"
        android:background="@drawable/bg_button_primary"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_history"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

</androidx.constraintlayout.widget.ConstraintLayout>
